 <animation>
	<type>select</type>
	<object-name>engine-lit</object-name>
	<condition>
		<property>sim/model/daedalus/systems/power-switch</property>
	</condition>
 </animation>

<!-- damage bar moves 25 count per color -->
 <animation>
	<type>textranslate</type>
	<object-name>damage.bar</object-name>
	<property>sim/model/daedalus/damage/hits-counter</property>
	<factor>0.005</factor>
	<step>1</step>
	<scroll>1</scroll>
	<axis>
		<x>1</x>
		<y>0</y>
		<z>0</z>
	</axis>
 </animation>

 <animation>
	<type>textranslate</type>
	<object-name>engine.bar.001</object-name>
